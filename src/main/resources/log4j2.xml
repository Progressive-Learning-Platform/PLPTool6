<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <CustomLevels>
        <CustomLevel name="LOGIN" intLevel="410" />
        <CustomLevel name="ASSEMBLE" intLevel="410" />
        <CustomLevel name="SIMULATE" intLevel="410" />
    </CustomLevels>
    <Appenders>
        <JDBC name="MySQLDatabase" tableName="logs">
            <ConnectionFactory class="edu.asu.plp.logger.dao.impl.ConnectionFactory" method="getConnection" />
            <Column name="user_id" pattern="%X{username}" />
            <Column name="dated" isEventTimestamp="true" />
            <Column name="logger" pattern="%logger" />
            <Column name="level" pattern="%level" />
            <Column name="message" pattern="%m" />
        </JDBC>
    </Appenders>
    <Loggers>
        <Logger name="edu.asu.plp" level="debug" additivity="false">
            <AppenderRef ref="MySQLDatabase" />
        </Logger>
        <Root level="trace">
            <AppenderRef ref="MySQLDatabase" />
        </Root>
    </Loggers>
</Configuration>